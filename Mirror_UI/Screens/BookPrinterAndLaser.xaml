        <ComboBox HorizontalAlignment="Left" Margin="135,777,0,0" VerticalAlignment="Top" Width="814" Height="60" FontSize="24" FontFamily="Noto Sans">
            <ComboBoxItem Content="None"/>
            <ComboBoxItem Content="LC1"/>
            <ComboBoxItem Content="LC2"/>
        </ComboBox>
        <TextBlock x:Name="welcomeMessage" HorizontalAlignment="Left" Height="162" Margin="63,233,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="972" FontSize="50" TextAlignment="Center" FontFamily="Noto Sans"><Run FontWeight="Bold" Text="Hi Mary,"/><LineBreak/><Run FontWeight="Bold" Text="book a 3D printer or a laser cutter:"/></TextBlock>

    </Grid>
</UserControl>
