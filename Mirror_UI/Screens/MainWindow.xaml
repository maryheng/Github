        <Button x:Name="ItemsOnLoanButton" Content="&gt;" HorizontalAlignment="Left" Height="46" Margin="886,853,0,0" VerticalAlignment="Top" Width="47" FontSize="24" RenderTransformOrigin="0.391,-2.557" Click="ItemsOnLoanButton_Click" Background="#FFEEEEEE" BorderBrush="#FFEEEEEE"/>
        <Label Content="Loan" HorizontalAlignment="Left" Margin="105,762,0,0" VerticalAlignment="Top" FontSize="34" FontFamily="Noto Sans" FontWeight="Bold"/>
        <Label Content="Twitter Feed" HorizontalAlignment="Left" Height="51" Margin="105,1446,0,0" VerticalAlignment="Top" Width="255" FontSize="34" FontFamily="Noto Sans" FontWeight="Bold"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="226" Margin="715,208,0,0" Stroke="Black" VerticalAlignment="Top" Width="253"/>
        <Image Margin="10,10,919,1759" Source="/Mirror_UI;component/weather.png" Stretch="Fill"/>

    </Grid>
